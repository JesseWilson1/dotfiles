[alias]
  hist = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
  call =! git add -A && git commit -v

[diff]
  tool = vimdiff

[merge]
  ff = only
  tool = vimdiff

[mergetool]
  prompt = false
  keepBackup = false

[fetch]
  prune = true

[push]
  default = current
  followTags = true

[gpg]
  program = gpg2

[help]
  autocorrect = 1

[commit]
  gpgSign = true

[core]
  ignorecase = false
