  email = wavded@gmail.com

[alias]
  hist = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

  call =! git add -A && git commit -v

[color]
	ui = true

[merge]
  ff = only
  tool = vimdiff

[mergetool]
  prompt = false
  keepBackup = false

[push]
  default = current
  followTags = true

[gpg]
	program = gpg2

[commit]
  gpgSign = true

[diff]
  tool = icdiff
[difftool]
  prompt = false
[difftool "icdiff"]
  cmd = /usr/local/bin/icdiff --line-numbers $LOCAL $REMOTE
